    withName: '.*RAGTAG:.*MAP_TO_ASSEMBLY.*' {
        ext.prefix = { "${meta.id}_ragtag" }
        publishDir = [
            path: { "${params.outdir}/${meta.id}/QC/alignments/ragtag/" },
            mode: params.publish_dir_mode,
            saveAs: { filename -> filename.equals('versions.yml') ? null : filename }
        ]
    }
    // Pilon mapping
    withName: 'PILON.*MAP_SR.*' {
        publishDir = [
            path: { "${params.outdir}/${meta.id}/QC/alignments/pilon/shortreads/" },
            mode: params.publish_dir_mode,
            saveAs: { filename -> filename.equals('versions.yml') ? null : filename }
        ]
        ext.prefix = { "${meta.id}_shortreads" }
        ext.args = { "-ax sr " }
    }
    /*
    --------
    Report
    */
    withName: REPORT {
        publishDir = [
            path: { "${params.outdir}/report/" },
            mode: params.publish_dir_mode,
            saveAs: { filename -> filename.equals('versions.yml') ? null : filename }
        ]
    }
}
